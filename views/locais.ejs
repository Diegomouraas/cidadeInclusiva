<!-- LOCAIS -->
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/styles.css" rel="stylesheet" type="text/css" media="all" />
    <link href="css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <title>Angra Cidade Inclusiva</title>
    <link rel="shortcut icon" href="img/faviicon.ico" type="image/x-icon" />
</head>

<body>

    <section>
        <%- include ('frags/header.ejs') %>
            <div class="main">
                <br><br>
                <h2 class="h1text">Locais Acessiveis</h1>
                    <br><br>


                    <div class="container-fluid">
                        <div class="row">
                            <% for(let i=0; i<cards.length; i++) {%>
                                <%if (cards[i].tipo==1){%>
                                    <div class="col-lg-2" id="cardLocais">
                                        <h5 class="card-title">
                                            <%= cards[i].nome %>
                                        </h5>
                                        <p class="card-text">
                                            <%= cards[i].descricao %>
                                        </p>
                                        <a href="#" class="btn btn-primary col-sm-4" id="btnCards">ver mais</a>

                                        <!-- seletor de selos -->
                                        <%if (cards[i].selo==1){%>
                                            <img class="seloCards" src="/img/Ouro.png" alt="...">
                                            <% } 
                                            else if (cards[i].selo==2){%>
                                                <img class="seloCards" src="/img/Prata.png" alt="...">
                                                <% }
                                                else if (cards[i].selo==3){%>
                                                    <img class="seloCards" src="/img/Bronze.png" alt="...">
                                                    <% } %>
                                    </div>
                                    <% } %>
                                        <% } %>
                        </div>
                    </div>
    </section>

    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <%- include ('frags/footer.ejs') %>

        <script src="js/bootstrap.js"></script>
</body>

</html>